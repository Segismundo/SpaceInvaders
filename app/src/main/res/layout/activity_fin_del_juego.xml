<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/finDeJuego"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="spaceInvaders.Activities.PuntuacionActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="192dp"
        android:layout_height="30dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:text="PUNTUACIÓN"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PUNTUACIÓN" />

    <TextView
        android:id="@+id/puntuacion"
        android:layout_width="179dp"
        android:layout_height="54dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:text="5"
        android:textColor="@color/black_overlay"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/reinicio"
        android:layout_width="119dp"
        android:layout_height="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginBottom="36dp"
        android:onClick="reiniciar"
        android:text="REINICIAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/salida"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="36dp"
        android:onClick="salir"
        android:text="SALIR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/puntuaciones"
        android:layout_width="272dp"
        android:layout_height="418dp"
        android:layout_marginStart="60dp"
        android:text="     Puntos - Nombre"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="172dp"
        android:layout_height="34dp"
        android:layout_marginStart="68dp"
        android:text="RANKING"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puntuacion"
        tools:text="RANKING" />

    <TextView
        android:id="@+id/textPunt500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:text="Puntuación menor de 500, no se puede reiniciar"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/myPhoto6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puntuaciones"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/myPhoto"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:translationX="260dp"
        android:translationY="40dp"
        app:layout_constraintBottom_toTopOf="@+id/puntuaciones"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

